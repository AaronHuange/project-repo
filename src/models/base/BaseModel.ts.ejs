<%_ if (TYPE === 'GraphQL') { -%>
import { Field, ID, ObjectType } from '@nestjs/graphql';
<%_ } -%>
import {
 BaseEntity, CreateDateColumn, UpdateDateColumn, DeleteDateColumn, PrimaryColumn,
} from 'typeorm';

<%_ if (TYPE === 'GraphQL') { -%>
@ObjectType()
<%_ } -%>
export class BaseModel extends BaseEntity {
  @PrimaryColumn({
    name: 'id',
  })
  <%_ if (TYPE === 'GraphQL') { -%>
  @Field(() => ID)
  <%_ } -%>
  id: string;

  <%_ if (TYPE === 'GraphQL') { -%>
  @Field(() => Date, { nullable: true })
  <%_ } -%>
  @DeleteDateColumn({
    name: 'deleted_at',
    type: 'datetime',
    comment: '删除时间',
  })
  deletedAt?: Date;

  <%_ if (TYPE === 'GraphQL') { -%>
  @Field(() => Date)
  <%_ } -%>
  @CreateDateColumn({
    name: 'created_at',
    type: 'datetime',
    comment: '创建时间',
    default: () => 'NOW()',
  })
  createdAt?: Date;

  <%_ if (TYPE === 'GraphQL') { -%>
  @Field(() => Date)
  <%_ } -%>
  @UpdateDateColumn({
    name: 'updated_at',
    type: 'datetime',
    comment: '更新时间',
    default: () => 'NOW()',
  })
  updatedAt?: Date;
}
